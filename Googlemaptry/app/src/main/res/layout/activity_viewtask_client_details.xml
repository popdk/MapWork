<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_task_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1.0"
            >

            <TextView
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/title"
                android:layout_weight=".25"
                android:textSize="20sp"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">


            <TextView
                android:text="Assigned By"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/description1"
                android:layout_weight="1.5"/>

            <TextView
                android:text=""
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/assignedto"
                android:layout_weight="1.75"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/toggleButton"
                android:layout_weight="1.75"

                style="@style/CustomStyleButton"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/show_hide">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0">


                <TextView
                    android:text="Description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/startdate1"
                    android:layout_weight=".75"/>

                <TextView
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/description"
                    android:layout_weight=".25"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4.0">


                <TextView
                    android:text="Projected Start time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/enddate1"
                    android:layout_weight="1.75"/>

                <TextView
                    android:text=""
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/projectedstarttime"
                    android:layout_weight="2.25"/>




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4.0">


                <TextView
                    android:text="Projected End time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/enddate12"
                    android:layout_weight="1.75"/>

                <TextView
                    android:text=""
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/projectedendtime"
                    android:layout_weight="2.25"/>




            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/viewinmap"
                android:text="View in Map"
                style="@style/CustomStyleButton"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
